FROM python:3.12-slim

WORKDIR /app

# Install system deps for confluent-kafka (librdkafka)
RUN apt-get update && \
    apt-get install -y --no-install-recommends librdkafka-dev gcc && \
    rm -rf /var/lib/apt/lists/*

# Create logs directory
RUN mkdir -p /var/log && chmod 777 /var/log

# Copy app code
COPY app.py /app/app.py
COPY kafka_utils.py /app/kafka_utils.py
COPY cli_app.py /app/cli_app.py

# Install Python dependencies
RUN pip install --no-cache-dir \
    streamlit \
    pandas \
    confluent-kafka \
    loguru #\
    #streamlit-autorefresh

# Streamlit configuration
ENV STREAMLIT_SERVER_PORT=8000 \
    STREAMLIT_SERVER_ADDRESS=0.0.0.0 \
    PYTHONUNBUFFERED=1

EXPOSE 8000

# Run the Streamlit app
CMD ["streamlit", "run", "app.py", "--server.port=8000", "--server.address=0.0.0.0", "--logger.level=debug"]
